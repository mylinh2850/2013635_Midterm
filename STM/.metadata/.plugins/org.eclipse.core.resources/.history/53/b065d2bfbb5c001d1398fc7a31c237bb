#include "fsm_normal.h"

void fsm_simple_buttons_run() {
	switch (status) {
	case INIT:
		status = RST;
		break;
	case RST:
		if (isRESETPressed() == 1) {
			//RESET pressed
			status = RST;
			counter = 0;
			display7SEG(counter);
		}
		else if (isINCPressed() == 1) {
			//INC pressed
			status = INC;
			counter++;
			display7SEG(counter);
			if (counter > 9)
				counter = 0;
		}
		else if (isDECPressed() == 1) {
			//DEC pressed
			status = DEC;
			counter--;
			display7SEG(counter);
			if (counter < 0)
				counter--;
		}
		break;
	case INC:
		if (isRESETPressed() == 1) {
			//RESET pressed
			status = RST;
			counter = 0;
			display7SEG(counter);
		}
		else if (isINCPressed() == 1) {
			//INC pressed
			status = INC;
			counter++;
			display7SEG(counter);
			if (counter > 9)
				counter = 0;
		}
		else if (isDECPressed() == 1) {
			//DEC pressed
			status = DEC;
			counter--;
			display7SEG(counter);
			if (counter < 0)
				counter--;
		}
		break;
	case DEC:
		if (isRESETPressed() == 1) {
			//RESET pressed
			status = RST;
			counter = 0;
			display7SEG(counter);
		}
		else if (isINCPressed() == 1) {
			//INC pressed
			status = INC;
			counter++;
			display7SEG(counter);
			if (counter > 9)
				counter = 0;
		}
		else if (isDECPressed() == 1) {
			//DEC pressed
			status = DEC;
			counter--;
			display7SEG(counter);
			if (counter < 0)
				counter--;
		}
		break;
	default:
		break;
	}
}
