#include "fsm_normal.h"

void fsm_simple_buttons_run() {
	switch (status) {
	case INIT:
		status = RST;
		counter = 0;
		display7SEG(counter);
		break;
	case RST:
		if (isButtonPressed(0) == 1) {
			//RESET pressed
			status = RST;
			counter = 0;
			display7SEG(counter);
		} else if (isButtonPressed(1) == 1) {
			//INC pressed
			status = INC;
			counter++;
			if (counter > 9)
				counter = 0;
			display7SEG(counter);
		} else if (isButtonPressed(2) == 1) {
			//DEC pressed
			status = DEC;
			counter--;
			display7SEG(counter);
			if (counter < 0)
				counter = 9;
		}
		break;
	case INC:
		if (isButtonPressed(0) == 1) {
			//RESET pressed
			status = RST;
			counter = 0;
			display7SEG(counter);
		} else if (isButtonPressed(1) == 1) {
			//INC pressed
			status = INC;
			counter++;
			if (counter > 9)
				counter = 0;
			display7SEG(counter);
		} else if (isButtonPressed(2) == 1) {
			//DEC pressed
			status = DEC;
			counter--;
			display7SEG(counter);
			if (counter < 0)
				counter--;
		}
		break;
	case DEC:
		if (isButtonPressed(0) == 1) {
			//RESET pressed
			status = RST;
			counter = 0;
			display7SEG(counter);
		} else if (isButtonPressed(1) == 1) {
			//INC pressed
			status = INC;
			counter++;
			if (counter > 9)
				counter = 0;
			display7SEG(counter);
		} else if (isButtonPressed(2) == 1) {
			//DEC pressed
			status = DEC;
			counter--;
			display7SEG(counter);
			if (counter < 0)
				counter--;
		}
		break;
	default:
		break;
	}
}
