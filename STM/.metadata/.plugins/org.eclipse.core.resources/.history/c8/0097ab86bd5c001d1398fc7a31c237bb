#include "fsm_normal.h"

void fsm_simple_buttons_run() {
	switch (status) {
	case INIT:
		status = RST;
		counter = 0;
		display7SEG(counter);
		break;
	case RST:
		counter = 0;
		display7SEG(counter);

		if (isButtonPressed(0) == 1) {
			//RESET pressed
			status = RST;
		} else if (isButtonPressed(1) == 1) {
			//INC pressed
			status = INC;
		} else if (isButtonPressed(2) == 1) {
			//DEC pressed
			status = DEC;
		}
		break;
	case INC:
		counter++;
		if (counter > 9)
			counter = 0;
		display7SEG(counter);

		if (isButtonPressed(0) == 1) {
			//RESET pressed
			status = RST;
		} else if (isButtonPressed(1) == 1) {
			//INC pressed
			status = INC;
		} else if (isButtonPressed(2) == 1) {
			//DEC pressed
			status = DEC;
		}
		break;
	case DEC:
		counter--;
		if (counter < 0)
			counter = 9;
		display7SEG(counter);

		if (isButtonPressed(0) == 1) {
			//RESET pressed
			status = RST;
		} else if (isButtonPressed(1) == 1) {
			//INC pressed
			status = INC;
		} else if (isButtonPressed(2) == 1) {
			//DEC pressed
			status = DEC;
		}
		break;
	default:
		break;
	}
}
