#include "fsm_normal.h"

void fsm_simple_buttons_run() {
	switch (status) {
	case INIT:
		status = RST;
		break;
	case RST:
		counter = 0;
		display7SEG(counter);

		if (isRESETPressed() == 1) {
			//RESET pressed
			status = RST;
		}
		if (isINCPressed() == 1) {
			//INC pressed
			status = INC;
		}
		if (isDECPressed() == 1) {
			//DEC pressed
			status = DEC;
		}
		break;
	case INC:
		counter = counter + 1;
		display7SEG(counter);

		if (isRESETPressed() == 1) {
			//RESET pressed
			status = RST;
		}
		if (isINCPressed() == 1) {
			//INC pressed
			status = INC;
		}
		if (isDECPressed() == 1) {
			//DEC pressed
			status = DEC;
		}
		break;
	case DEC:
		counter = counter - 1;
		display7SEG(counter);

		if (isRESETPressed() == 1) {
			//RESET pressed
			status = RST;
		}
		if (isINCPressed() == 1) {
			//INC pressed
			status = INC;
		}
		if (isDECPressed()) == 1) {
			//DEC pressed
			status = DEC;
		}
		break;
	default:
		break;
	}
}
